<div class="text-right">
  <%= render 'shared/toggle_owned' %>
</div>
<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th><!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @bardings.each do |barding| %>
      <tr <%= 'class="owned"'.html_safe if @barding_ids.include?(barding.id) %>>
        <td><%= barding_icon(barding) %></td>
        <td><%= barding.name %></td>
        <td><%= sources(barding) %></td>
        <td class="text-center" data-value="<%= barding.patch %><%= barding.id %>"><%= barding.patch %></td>
        <% if character_selected? %>
          <%= td_owned(@barding_ids, barding) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
