<div class="d-flex flex-wrap justify-content-center category-buttons">
  <button type="button" class="btn btn-dark bold shadow-none mb-1<%= ' active' unless @category.present? %>" id="0">All</button>
  <% @categories.each do |category| %>
    <button type="button" class="btn btn-dark shadow-none mb-1<%= ' active' if category.id == @category %>"
                          id="<%= category.id %>"><%= category.name %></button>
  <% end %>
</div>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable" id="emote">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th><!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="text-center">Category</th>
      <th scope="col" class="text-center">Patch</th>
    </tr>
  </thead>
  <tbody>
    <% @emotes.each do |emote| %>
      <tr class="<%= category_row_classes(emote, @category) %>">
        <td><%= emote_icon(emote) %></td>
        <td><%= emote.name %></td>
        <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</td>
        <td class="text-center"><%= emote.category.name %></td>
        <td class="text-center" data-value="<%= emote.patch %><%= emote.id %>"><%= emote.patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
