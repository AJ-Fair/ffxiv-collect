<%= render 'shared/category_buttons', categories: @categories, selected: @category %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable categorized">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th><!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="text-center">Category</th>
      <th scope="col" class="text-center">Patch</th>
    </tr>
  </thead>
  <tbody>
    <% @emotes.each do |emote| %>
      <tr class="<%= category_row_classes(emote, @category) %>">
        <td><%= emote_icon(emote) %></td>
        <td><%= emote.name %></td>
        <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</td>
        <td class="text-center"><%= emote.category.name %></td>
        <td class="text-center" data-value="<%= emote.patch %><%= emote.id %>"><%= emote.patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
