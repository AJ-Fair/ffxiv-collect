<%= render 'shared/category_buttons', categories: @categories, selected: @category %>
<div class="row my-2">
  <div class="col-8 col-lg-6 offset-lg-3">
    <%= search_form_for(@q, url: emotes_path, enforce_utf8: false, class: 'form form-inline search-form d-flex') do |f| %>
      <%= f.search_field "name_#{I18n.locale}_cont", placeholder: 'Name',
        class: 'form-control form-control-sm flex-grow-1' %>
      <%= f.collection_select :sources_type_id_eq, @types, :id, :name,
        { include_blank: 'All Sources' }, class: 'form-control form-control-sm' %>
      <%= f.submit 'Search', name: nil, class: 'btn btn-secondary btn-sm mr-0' %>
    <% end %>
  </div>
  <div class="col-4 col-lg-3 d-flex align-items-center justify-content-end mt-2 mt-lg-0">
    <% if character_selected? %>
      <%= render 'shared/toggle_owned' %>
    <% end %>
  </div>
</div>
<% if character_selected? %>
  <div class="my-2">
    <%= collection_progress(@emotes, @emote_ids) %>
  </div>
<% end %>
<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable categorized">
  <thead>
    <tr>
      <th scope="col">#</th><!-- Image -->
      <th scope="col">Name</th>
      <th scope="col" class="hide-xs">Source</th>
      <th scope="col" class="text-center">Category</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @emotes.each do |emote| %>
      <tr class="<%= category_row_classes(emote, @category, @emote_ids) %>">
        <td data-value="<%= emote.id %>"><%= sprite(emote, :emote) %></td>
        <td><%= link_to(emote.name, emote_path(emote), class: 'name') %></td>
        <td class="hide-xs"><%= sources(emote) %></td>
        <td class="text-center"><%= emote.category.name %></td>
        <td class="text-center" data-value="<%= emote.patch %><%= emote.id %>"><%= emote.patch %></td>
        <% if character_selected? %>
          <%= td_owned(@emote_ids, emote) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
