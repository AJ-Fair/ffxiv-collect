<% if character_selected? %>
  <%= render 'layouts/toggle_owned' %>
  <div class="mt-2">
    <%= render 'layouts/progress', value: @mount_ids.size, min: 0, max: Mount.count %>
  </div>
<% end %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable" id="npcs">
  <thead>
    <tr>
      <th scope="col"></th> <!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @mounts.each do |mount| %>
      <tr class="collectable<%= ' owned' if @mount_ids.include?(mount.id) %>">
        <td>
          <%= link_to(mount_path(mount)) do %>
            <%= mount_icon(mount) %>
          <% end %>
        </td>
        <td><%= link_to(mount.name, mount_path(mount), class: 'name') %></td>
        <td><%= mount.enhanced_description.truncate(80) %></td>
        <td class="text-center"><%= mount.patch %></td>
        <% if character_selected? %>
          <td class="text-center"><%= owned(@mount_ids, mount.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
