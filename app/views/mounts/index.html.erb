<% if character_selected? %>
  <%= render 'shared/toggle_owned' %>
  <div class="mt-2">
    <%= render 'shared/progress', value: @mount_ids.size, min: 0, max: Mount.count %>
  </div>
<% end %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th> <!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @mounts.each do |mount| %>
      <tr class="collectable<%= ' owned' if @mount_ids.include?(mount.id) %>">
        <td>
          <%= link_to(mount_path(mount)) do %>
            <%= mount_icon(mount) %>
          <% end %>
        </td>
        <td><%= link_to(mount.name, mount_path(mount), class: 'name') %></td>
        <td><%= sources(mount) %></td>
        <td class="text-center" data-value="<%= mount.patch %><%= mount.id %>"><%= mount.patch %></td>
        <% if character_selected? %>
          <%= td_owned(@mount_ids, mount, false) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
