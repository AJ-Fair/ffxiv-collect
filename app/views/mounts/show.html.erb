<% title(@mount.name) %>
<% description(@mount.enhanced_description.truncate(150)) %>
<% image(image_url("mounts/small/#{@mount.id}.png", skip_pipeline: true)) %>

<div class="row">
  <div class="col-12 col-lg-10 offset-0 offset-lg-1">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <div class="d-lg-none mr-2">
          <%= sprite(@mount, 'mounts-small') %>
        </div>
        <h5 class="card-title"><%= @mount.name %></h5>
      </div>
      <div class="card-body">
        <div class="d-flex">
          <div class="d-none d-lg-block mr-4">
            <%= image_tag("mounts/large/#{@mount.id}.png", class: 'image-large') %>
          </div>
          <div class="d-flex flex-column flex-info">
            <div class="d-flex flex-wrap">
              <div>
                <dt>Movement</dt>
                <dd><%= @mount.movement %></dd>
              </div>
              <div>
                <dt>Flying</dt>
                <dd><%= fa_check(@mount.flying) %></dd>
              </div>
              <div>
                <dt>Tradeable</dt>
                <dd><%= tradeable(@mount) %></dd>
              </div>
              <% if @mount.seats > 1 %>
                <div>
                  <dt>Seats</dt>
                  <dd><%= @mount.seats %></dd>
                </div>
              <% end %>
              <%= render 'shared/ownership', collectable: @mount %>
              <div>
                <dt>Patch</dt>
                <dd><%= @mount.patch %></dd>
              </div>
            </div>
            <dt>Source</dt>
            <dd><%= sources(@mount, list: true) %></dd>
            <dt>Description</dt>
            <dd><%= format_text(@mount.description) %></dd>
            <dt>Journal</dt>
            <dd><%= format_text(@mount.enhanced_description) %></dd>
            <dt>Tooltip</dt>
            <dd><%= format_text(@mount.tooltip) %></dd>
          </div>
        </div>
        <div class="mount-footprint">
          <%= image_tag("mounts/footprint/#{@mount.id}.png") %>
        </div>
      </div>
    </div>
  </div>
</div>
