<div class="row">
  <div class="col-12 col-lg-8 offset-lg-2">
    <%= render 'shared/category_buttons', categories: @categories, selected: @category %>
  </div>
</div>
<div class="text-right">
  <%= render 'shared/toggle_owned' %>
</div>
<%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable categorized">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th><!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="text-center">Category</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @armoires.each do |armoire| %>
      <tr class="<%= category_row_classes(armoire, @category, @armoire_ids) %>">
        <td><%= armoire_icon(armoire) %></td>
        <td><%= armoire.name %></td>
        <td>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</td>
        <td class="text-center"><%= armoire.category.name %></td>
        <td class="text-center" data-value="<%= armoire.patch %><%= armoire.id %>"><%= armoire.patch %></td>
        <% if character_selected? %>
          <%= td_owned(@armoire_ids, armoire) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
