<% if character_selected? %>
  <%= render 'layouts/toggle_owned' %>
  <div class="mt-2">
    <%= render 'layouts/progress', value: @minion_ids.size, min: 0, max: Minion.count %>
  </div>
<% end %>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5 sortable">
  <thead>
    <tr>
      <th scope="col" data-defaultsort="disabled"></th> <!-- Image -->
      <th scope="col">Name</th>
      <th scope="col">Type</th>
      <th scope="col">Description</th>
      <th scope="col" class="text-center">Patch</th>
      <% if character_selected? %>
        <th scope="col" class="text-center">Own</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @minions.each do |minion| %>
      <tr class="collectable<%= ' owned' if @minion_ids.include?(minion.id) %>">
        <td>
          <%= link_to(minion_path(minion)) do %>
            <%= minion_icon(minion) %>
          <% end %>
        </td>
        <td><%= link_to(minion.name, minion_path(minion), class: 'name') %></td>
        <td class="text-center" data-value="<%= minion.race_id %>"><%= minion_type(minion) %></td>
        <td><%= minion.description.truncate(80) %></td>
        <td class="text-center" data-value="<%= minion.patch %><%= minion.id %>"><%= minion.patch %></td>
        <% if character_selected? %>
          <%= td_owned(@minion_ids, minion.id) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
