<div class="row">
  <div class="col-12 col-md-10 col-lg-7 offset-md-1 offset-lg-0 mb-3 mb-lg-0">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"><%= @minion.name %></h5>
      </div>
      <div class="card-body">
        <div class="d-flex">
          <div class="minion-large">
            <%= minion_large(@minion) %>
          </div>
          <div class="d-flex flex-column flex-info ml-4">
            <div class="d-flex">
              <div>
                <dt>Behavior</dt>
                <dd><%= @minion.behavior.name %></dd>
              </div>
              <div>
                <dt>Patch</dt>
                <dd><%= @minion.patch %></dd>
              </div>
            </div>
            <dt>Description</dt>
            <dd><%= format_text(@minion.description) %></dd>
            <dt>Tooltip</dt>
            <dd><%= format_text(@minion.tooltip) %></dd>
          </div>
        </div>
        <div class="minion-footprint">
          <%= minion_footprint(@minion) %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-10 col-lg-5 offset-md-1 offset-lg-0">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="card-title">Lord of Verminion</h6>
        <div>
          <%= @minion.race.name %>
          <%= minion_type(@minion) %>
        </div>
      </div>
      <div class="card-body">
        <div class="d-flex flex-column flex-info">
          <div class="d-flex flex-wrap">
            <div>
              <dt>HP</dt>
              <dd><%= @minion.hp %></dd>
            </div>
            <div>
              <dt>ATK</dt>
              <dd><%= @minion.attack %></dd>
            </div>
            <div>
              <dt>DEF</dt>
              <dd><%= @minion.defense %></dd>
            </div>
            <div>
              <dt>SPD</dt>
              <dd><%= speed(@minion) %></dd>
            </div>
            <div>
              <dt>Cost</dt>
              <dd><%= @minion.cost %></dd>
            </div>
            <div>
              <dt>Auto-attack</dt>
              <dd><%= auto_attack(@minion) %></dd>
            </div>
            <div>
              <dt>Strengths</dt>
              <dd>
                <% @minion.strengths.each_with_index do |(type, strong), i| %>
                  <% if strong %>
                    <%= minion_strength(type, i) %>
                  <% end %>
                <% end %>
              </dd>
            </div>
          </div>
          <hr>
          <div class="d-flex">
            <div class="d-flex flex-column mr-3">
              <b><u><%= @minion.skill %></u></b>
              <span><%= format_text(@minion.skill_description) %></span>
            </div>
            <div class="minion-skill-angle mt-4">
              <%= minion_skill_angle(@minion) %>
            </div>
          </div>
          <div class="d-flex flex-wrap mt-3">
            <div>
              <dt>Points</dt>
              <dd><%= @minion.skill_cost %></dd>
            </div>
            <div>
              <dt>Type</dt>
              <dd><%= @minion.skill_type.name %></dd>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
