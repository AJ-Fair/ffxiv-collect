<% flash.to_hash.each do |key, value| %>
  <div class="alert alert-dismissable fade show <%= flash_class(key) %>">
    <% unless key =~ /fixed/ %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        <%= fa_icon 'times' %>
      </button>
    <% end %>
    <%= sanitize(value) %>
  </div>
<% end %>
