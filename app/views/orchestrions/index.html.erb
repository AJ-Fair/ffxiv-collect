<div class="d-flex flex-wrap justify-content-center category-buttons">
  <button type="button" class="btn btn-dark bold shadow-none mb-1<%= ' active' unless @category.present? %>" id="0">All</button>
  <% @categories.each do |category| %>
    <button type="button" class="btn btn-dark shadow-none mb-1<%= ' active' if category.id == @category %>"
                          id="<%= category.id %>"><%= category.name %></button>
  <% end %>
</div>
<table class="table table-striped table-sm shadow p-3 mt-2 mb-5" id="orchestrion">
  <thead>
    <tr>
      <th scope="col"></th><!-- Image -->
      <th scope="col" class="text-center">#</th>
      <th scope="col" class="orchestrion-name">Name</th>
      <th scope="col">Source</th>
      <th scope="col" class="orchestrion-category text-center">Category</th>
      <th scope="col" class="text-center">Patch</th>
    </tr>
  </thead>
  <tbody>
    <% @orchestrions.each do |orchestrion| %>
      <tr class="<%= category_row_classes(orchestrion, @category) %>">
        <td><%= image_tag('orchestrion.png') %></td>
        <td class="text-center"><%= orchestrion_number(orchestrion) %></td>
        <td><%= link_to(orchestrion.name, orchestrion_path(orchestrion), class: 'name') %></td>
        <td><%= orchestrion.description.gsub("\n", '<br>').html_safe %></td>
        <td class="text-center"><%= orchestrion.category.name %></td>
        <td class="text-center"><%= orchestrion.patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>
