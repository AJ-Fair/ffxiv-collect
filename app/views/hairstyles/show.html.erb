<div class="row">
  <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title"><%= @hairstyle.name %></h5>
        <h5 class="mb-0"><%= @hairstyle.patch %></h5>
      </div>
      <div class="card-body d-flex flex-column">
        <dt>Source</dt>
        <dd><%= sources(@hairstyle) %></dd>
        <% if @hairstyle.description.present? %>
          <dt>Description</dt>
          <dd class="mb-0"><%= format_text(@hairstyle.description) %></dd>
        <% end %>
        <hr>
        <div class="d-flex flex-wrap hairstyle-list">
          <% 16.times do |i| %>
            <%= hairstyle_icon(@hairstyle, i) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
